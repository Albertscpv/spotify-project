---
import Home from "../icons/Home.astro"
import LibraryIcon from "../icons/LibraryIcon.astro"
import Search from "../icons/Search.astro"
import AsideItem from "./AsideItem.astro"
import AsideMenuCard from './AsideMenuCard.astro'

import { playlists } from "../lib/data";
---
<!-- Nav Bar -->
<nav class="flex flex-col flex-1 gap-2 ">
    <div class="bg-zinc-800 rounded-lg p-4">
        <ul>
            <AsideItem href="/">
            <Home/>
                Home
            </AsideItem>
            <AsideItem href="/#">
            <Search/>
                Search
            </AsideItem>
        </ul>
    </div>
    <div class="bg-zinc-800 rounded-lg p-2 flex-1">
    <ul>
        <AsideItem href="/">
        <LibraryIcon/>
            Biblioteca
        </AsideItem>
        {
            playlists.map(playlist => <AsideMenuCard playlist={playlist}/>)
        } 
    </ul>
    </div>
</nav>